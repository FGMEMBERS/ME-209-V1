<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>inttour2</object-name>
    <object-name>inttourverriere</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intcanopy</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intcanopy</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/ME-209-V1/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> 0.692 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.511 </z-m>
    </offsets>
  </model>

  <!-- Planches de bord  -->
  <model>
    <path>Aircraft/ME-209-V1/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> 0.248 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.738 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>AllIntCanopy</name>
    <object-name>inttourverriere</object-name>
    <object-name>inttour2</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AllIntCanopy</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> -95 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> 0.538 </x1-m>
      <y1-m> 0.354 </y1-m>
      <z1-m> 0.657 </z1-m>
      <x2-m> 1.130 </x2-m>
      <y2-m> 0.314 </y2-m>
      <z2-m> 0.657 </z2-m>
    </axis>
  </animation>

  <!-- COLLIMATOR
  <model>
    <path>Aircraft/ME-209-V1/Models/Interior/Panel/Instruments/collimator/collimator.xml</path>
    <offsets>
      <x-m> -0.427 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.823 </z-m>
    </offsets>
  </model> -->

</PropertyList>

